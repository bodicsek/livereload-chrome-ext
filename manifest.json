{
  "name": "Livereload",
  "description": "Injects livereload.js into the current page.",
  "version": "0.9.0",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "images/inactive16.png",
    "48": "images/inactive48.png",
    "128": "images/inactive.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "Inject livereload.js",
    "default_icon": "images/inactive.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
