{
    "name": "Livereload",
    "description": "Injects livereload.js into the current page.",
    "version": "2.0",
    "permissions": [
        "tabs",
        "http://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Inject livereload.js"
    },
    "manifest_version": 2
}
